@page
@model JandJCommerce.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
    Layout = "_Layout";
}

<div class="container pt-5">

    <form method="post">

        <div class="form-group row">
            <h6 class="col-sm-2 offset-sm-1"><label asp-for="FirstName" class="col-form-label"></label></h6>
            <div class="col-sm-9">
                <input asp-for="FirstName" class="form-control" value="@Model.FirstName" />
            </div>
        </div>
        <div class="form-group row">
            <h6 class="col-sm-2 offset-sm-1"><label asp-for="LastName" class="col-form-label"></label></h6>
            <div class="col-sm-9">
                <input asp-for="LastName" class="form-control" value="@Model.LastName" />
            </div>
        </div>
        <div class="form-group row">
            <h6 class="col-sm-2 offset-sm-1"><label asp-for="Location" class="col-form-label"></label></h6>
            <div class="col-sm-9">
                <input asp-for="Location" class="form-control" value="@Model.Location" />
            </div>
        </div>
        <div class="form-group row">
            <h6 class="col-sm-2 offset-sm-1"><label asp-for="Email" class="col-form-label"></label></h6>
            <div class="col-sm-9">
                <input asp-for="Email" readonly="readonly" class="form-control" value="@Model.Email" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" class="btn btn-primary" value="Update User" />
            </div>
        </div>

        @await Component.InvokeAsync("OrderView", User.Identity.Name);

    </form>
</div>

