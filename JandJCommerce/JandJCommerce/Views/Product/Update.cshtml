@model Product;

@{
    Layout = "_Layout";
}

<div class="container pt-5">
    <h4>Update @Model.Name</h4>
    <hr />
    <br />
    <form asp-action="Update" method="post">
        <div class="form-group row">
            <h6 class="col-sm-2 offset-sm-1"><label asp-for="Name" class="col-form-label">Name</label></h6>
            <div class="col-sm-9">
                <input asp-for="Name" class="form-control" value="@Model.Name" type="text" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <h6 class="col-sm-2 offset-sm-1"><label asp-for="Price" class="col-form-label">Price</label></h6>
            <div class="col-sm-9">
                <input asp-for="Price" class="form-control currency" value="@Model.Price" type="number" min="0" step="0.01" data-number-stepfactor="100" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <h6 class="col-sm-2 offset-sm-1"><label asp-for="Image" class="col-form-label">Image Path</label></h6>
            <div class="col-sm-9">
                <input asp-for="Image" class="form-control" value="@Model.Image" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <h6 class="col-sm-2 offset-sm-1"><label asp-for="Description" class="col-form-label">Description</label></h6>
            <div class="col-sm-9">
                <input asp-for="Description" class="form-control" value="@Model.Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <h6 class="col-sm-2 offset-sm-1"><label asp-for="Sku" class="col-form-label">Sku</label></h6>
            <div class="col-sm-9">
                <input asp-for="Sku" class="form-control" type="text" value="@Model.Sku" />
                <span asp-validation-for="Sku" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <h6 class="col-sm-2 offset-sm-1"><label asp-for="Category" class="col-form-label">Category</label></h6>
            <div class="col-sm-9">
                <select asp-for="Category" class="form-control custom-select" asp-items="Html.GetEnumSelectList<Category>()" value="@Model.Category"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" class="btn btn-primary" value="Update Product" />
            </div>
        </div>

        <br />
        <div class="col-sm-9 offset-sm-3">
            <a asp-action="Index" asp-controller="Home">Return to the Home Page</a>
        </div>
    </form>

</div>
