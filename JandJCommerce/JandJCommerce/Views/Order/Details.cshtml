@model Order;

@{
    Layout = "_Layout";
}

<div class="container pt-5">

    <h2>Details for Your Order</h2>

    <ul>
        <li>Date Purchased: @Model.OrderDate</li>
        <li>Total Price: $@Model.TotalPrice</li>
    </ul>

    @foreach(BasketItem item in Model.BasketItems)
    {
        <p>@item.Product.Name</p>
        <span class="IMGcontainer">
            <img src="@item.Product.Image" alt="Image of @item.Product.Name" />
        </span>
        <table class="table">
            <tr>
                <td>Category: @item.Product.Category</td>
            </tr>
            <tr>
                <td>Price: $@item.Product.Price</td>
            </tr>
            <tr>
                <td>Description: @item.Product.Description</td>
            </tr>
            <tr>
                <td>Sku: @item.Product.Sku</td>
            </tr>
            <tr>
                <td>Quantity Bought: @item.Quantity</td>
            </tr>
        </table>


    }

</div>
